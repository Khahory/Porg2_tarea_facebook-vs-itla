@model Porg2_tarea_facebook.Models.Calculadora

@{
    ViewBag.Title = "Calculadora";
}

<h2>Calculadora</h2>

<form action="Total" method="post">
    <label>Valor 1</label>
    <input type="number" class="form-control" name="value1" required />
    <br />
    <label>Valor 2</label>
    <input class="form-control" type="number" name="value2" required />
    <br />

    <div class="btn-group btn-group-lg" data-toggle="buttons">
        <label class="btn btn-secondary active">
            <input type="radio" name="options" id="option1" value="+" autocomplete="off" checked> Sumar
        </label>
        <label class="btn btn-secondary">
            <input type="radio" name="options" id="option2" value="-" autocomplete="off"> Restar
        </label>
        <label class="btn btn-secondary">
            <input type="radio" name="options" id="option3" value="*" autocomplete="off"> Multiplicar
        </label>
        <label class="btn btn-secondary">
            <input type="radio" name="options" id="option3" value="/" autocomplete="off"> Dividir
        </label>
    </div>
    <br />
    <br />
    <input type="submit" class="btn btn-default" value="Calcular" formtarget="_blank" />
</form>

